  </div>
<!-- End Navbar -->


<div class="container">
     <div class="row">


     <% song.forEach( function(data){ %>

       <div class="col-md-4 col-sm  d-flex flex-column align-items-center justify-content-center mb-5">
           <div class="card justify-content-around shadow bg-white rounded align-self-center " style="width: 17rem;">
             <audio id=<%=data.id%> src=<%= data.audiourl %>></audio>

             <div class="card-body  d-flex flex-column">
               <h5 class="card-title pt-3"><%= data.name %></h5>
                 <p class="card-text font-weight-light small "><%= data.firstAuthur %></p>
                 <div class="d-flex flex-row justify-content-space-around align-items-center ">
                    <i class="card-text font-weight-light small text-muted"><%= data.createdAt.toLocaleDateString() %></i>
                 </div>
             </div>
           </div>


           <div class="d-flex mb-5">

           <a class="text-decoration-none  btn btn-primary" href="/admin/<%= data.id %>">Edit</a>

           <form method="POST" action="/admin/<%= data.id %>?_method=DELETE">
           <button type="submit" class="btn btn-primary ml-5">Delete</button>
           </form>

           </div>


         </div>

    <% }) %>

</div>
</div>

