    <% } %>
    <% } %>
    <%if(currentPage != pageCount) { %>
    <li class="page-item">
      <a class="page-link" href="/?page=<%= pageCount %>">Last</a>
    </li>
    <% } %>
  </ul>
</nav>
<% } %>
